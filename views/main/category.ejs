<% layout('layout') -%>

<div class="container">
    <% for(var i =0, len = products.length; i < len; i++) { %>
       <div class="col-md-4">
           <a href="/product/<%= products[i]._id %>">
               <div class="thumbnail">
                   <img src="<%= products[i].image %>">
                   <div class="caption">
                       <h3><%= products[i].name %></h3>
                       <p><%= products[i].category.name %></p>
                       <p><%= products[i].price %></p>
                   </div>
               </div>

           </a>
       </div>
    <% } %>
</div>