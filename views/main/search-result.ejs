<% layout('layout') -%>

<% if (data.length) { %>
    <h3>Result for <%= query %></h3>
    <div class="container">
        <div class="row">

            <% for( var i = 0, len = data.length; i < len; i++) { %>
            <div class="col-md-4">
                <a href="/product/<%= data[i]._source._id %>">
                    <div class="thumbnail">
                        <img src="<%= data[i]._source.image %>" />
                        <div class="caption">
                            <h3><%= data[i]._source.name%></h3>
                            <p><%= data[i]._source.category.name%></p>
                            <p><%= data[i]._source.price%></p>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>
        </div>
    </div>
<% } else { %>
    <h3>Search not found</h3>
<% } %>